{
  "name": "fusionbridge",
  "version": "1.0.0",
  "description": "Atomic cross-chain bridge enabling 1inch Fusion+ swaps between Ethereum and Aptos",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "npm run build:ethereum && npm run build:aptos",
    "build:ethereum": "cd contracts/ethereum && npm run build",
    "build:aptos": "cd contracts/aptos && aptos move build",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:ethereum && npm run test:aptos",
    "test:ethereum": "cd contracts/ethereum && npm run test",
    "test:aptos": "cd contracts/aptos && aptos move test",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "deploy": "npm run deploy:ethereum && npm run deploy:aptos",
    "deploy:ethereum": "cd contracts/ethereum && npm run deploy",
    "deploy:aptos": "cd contracts/aptos && aptos move publish",
    "install:all": "npm install && cd contracts/ethereum && npm install && cd ../../frontend && npm install && cd ../backend && npm install",
    "setup": "npm run install:all && cp env.example .env"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "@aptos-labs/wallet-adapter-ant-design": "^5.1.2",
    "@aptos-labs/wallet-adapter-react": "^7.0.3",
    "@web3-react/core": "^8.2.3",
    "@web3-react/injected-connector": "^6.0.7"
  }
}
